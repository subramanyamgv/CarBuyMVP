<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.subbu.carbuy" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="app.subbu.carbuy.CarBuyMvpApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar" >
        <activity android:name="app.subbu.carbuy.activity.CarSelectionActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.CarTypesDialogActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/select_car_type"
            android:theme="@style/AppTheme.Dialog" />

    </application>

</manifest>